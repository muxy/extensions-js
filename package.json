{
  "name": "@muxy/extensions-js",
  "author": "Muxy, Inc.",
  "version": "2.1.1",
  "license": "ISC",
  "repository": "https://github.com/muxy/extensions-js",
  "description": "Provides easy access to Muxy's powerful backend architecture for Twitch extensions.",
  "main": "dist/medkit.umd.js",
  "module": "dist/medkit.esm.js",
  "typings": "dist/types/src/index.d.ts",
  "scripts": {
    "lint": "tslint -t codeFrame 'src/**/*.ts' '__tests__/**/*.ts' 'integration_tests/**/*.ts'",
    "dev": "rollup -c rollup.config.ts -w",
    "build": "tsc --module commonjs --skipLibCheck && rollup -c rollup.config.ts && typedoc --out dist/docs --target es6 --theme default --mode modules --excludeExternals --skipLibCheck src",
    "test": "jest __tests__/*.ts",
    "test:integration": "jest integration_tests/*.ts",
    "test:integration_server": "./run_integration_tests.sh",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "prebuild": "rimraf dist",
    "prepublish": "npm run build"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --config ./.prettier.config.js --write --single-quote",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true,
    "verbose": true,
    "browser": true
  },
  "peerDependencies": {
    "base-64": "^0.1.0",
    "parse-headers": "^2.0.1",
    "pusher-js": "^4.3.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.5",
    "@types/pusher-js": "^4.2.0",
    "colors": "^1.3.2",
    "commitizen": "^3.0.4",
    "coveralls": "^3.0.2",
    "cross-env": "^5.1.5",
    "cz-conventional-changelog": "^2.1.0",
    "gulp": "^3.9.1",
    "gulp-footer": "^2.0.1",
    "gulp-replace": "^1.0.0",
    "gumshoe": "^0.2.1",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "jest-config": "^23.6.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "prompt": "^1.0.0",
    "regenerator-runtime": "^0.12.1",
    "replace-in-file": "^3.4.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.66.6",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.17.2",
    "semantic-release": "^15.10.5",
    "sinon": "^7.0.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typedoc": "^0.13.0",
    "typedoc-plugin-external-module-name": "^1.1.3",
    "typescript": "^3.1.1",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "pusher-js": "^4.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
