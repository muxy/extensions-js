{
  "name": "@muxy/extensions-js",
  "author": "Muxy, Inc.",
  "version": "2.4.1",
  "license": "ISC",
  "repository": "https://github.com/muxy/extensions-js",
  "description": "Provides easy access to Muxy's powerful backend architecture for Twitch extensions.",
  "main": "dist/medkit.umd.js",
  "module": "dist/medkit.esm.js",
  "typings": "dist/types/src/index.d.ts",
  "scripts": {
    "build": "tsc --module commonjs --skipLibCheck && rollup -c rollup.config.ts",
    "dev": "rollup -c rollup.config.ts -w",
    "docs": "typedoc --out dist/docs --target es6 --theme default --mode modules --excludeExternals --skipLibCheck src && node ./tools/generate-docs.js",
    "lint": "npx eslint 'src/**/*.ts' '__tests__/**/*.ts'",
    "prebuild": "rimraf dist",
    "prepublish": "npm run build",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "test": "TZ=UTC jest __tests__/*.ts",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache"
  },
  "lint-staged": {
    "{src,__tests__}/**/*.ts": [
      "prettier --config ./.prettierrc.js --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true,
    "verbose": true,
    "resolver": "./tools/resolver.js"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/pusher-js": "^4.2.2",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "browser-resolve": "^2.0.0",
    "colors": "^1.4.0",
    "commitizen": "^4.2.3",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.24.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "js-yaml": "^4.1.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "prompt": "^1.1.0",
    "regenerator-runtime": "^0.13.7",
    "rimraf": "^3.0.2",
    "rollup": "^2.45.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.30.0",
    "semantic-release": "^17.4.2",
    "shins": "^2.6.0",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typedoc": "^0.19.0",
    "typedoc-plugin-external-module-name": "^4.0.6",
    "typedoc-plugin-sourcefile-url": "^1.0.6",
    "typescript": "^3.9.0",
    "validate-commit-msg": "^2.14.0",
    "widdershins": "^4.0.1"
  },
  "dependencies": {
    "eslint-config-prettier": "^8.2.0",
    "gulp": "^4.0.2",
    "pako": "^2.0.3",
    "pusher-js": "^7.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
