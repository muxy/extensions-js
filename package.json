{
  "name": "@muxy/extensions-js",
  "author": "Muxy, Inc.",
  "version": "2.4.15",
  "license": "ISC",
  "repository": "https://github.com/muxy/extensions-js",
  "description": "Provides easy access to Muxy's powerful backend architecture for Twitch extensions.",
  "main": "dist/medkit.umd.js",
  "module": "dist/medkit.esm.js",
  "typings": "dist/types/src/index.d.ts",
  "scripts": {
    "build": "tsc --module commonjs --skipLibCheck && rollup -c rollup.config.ts",
    "dev": "rollup -c rollup.config.ts -w",
    "lint": "npx eslint 'src/**/*.ts' '__tests__/**/*.ts'",
    "prebuild": "rimraf dist",
    "prepack": "npm run build",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "test": "TZ=UTC jest __tests__/*.ts",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache"
  },
  "lint-staged": {
    "{src,__tests__}/**/*.ts": [
      "prettier --config ./.prettierrc.js --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true,
    "verbose": true,
    "resolver": "./tools/resolver.js"
  },
  "devDependencies": {
    "@types/pusher-js": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "browser-resolve": "^2.0.0",
    "colors": "^1.4.0",
    "commitizen": "^4.2.4",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.7.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "js-yaml": "^4.1.0",
    "lint-staged": "^12.1.7",
    "prettier": "^2.5.1",
    "prompt": "^1.2.1",
    "regenerator-runtime": "^0.13.9",
    "rimraf": "^3.0.2",
    "rollup": "^2.64.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.31.1",
    "semantic-release": "^18.0.1",
    "shins": "^2.6.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "validate-commit-msg": "^2.14.0",
    "widdershins": "^4.0.1"
  },
  "dependencies": {
    "eslint-config-prettier": "^8.2.0",
    "gulp": "^4.0.2",
    "pako": "^2.0.4",
    "pusher-js": "^7.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
